
@{
    ViewBag.Title = "Index";
}

<div class="card mt-4 ml-auto mr-auto" style="box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.3); width:40%;">

    <div class="card-body">
        <form method="post" action="@Url.Action("Index", "SignUp")" class="d-flex flex-column align-items-center text-center">
            @{
                if (Session["SignUpMessage"] == null)
                {
                    <div></div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <p>@Session["SignUpMessage"]</p>
                    </div>
                }
            }

            <div class="form-group">
                <h3>Sign Up</h3>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="UserName" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Password" placeholder="Password" required>
            </div>

            <div class="form-group">
                <label>Select Role</label>
                <select class="form-control" name="Role" required>
                    <option value="Developer">I'm Developer</option>
                    <option value="ProductManager">I'm Product Manager</option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>

            <hr />

            <div class="form-group">
                <span>Already have an account, <a href="@Url.Action("Index", "SignIn")" style="color:#6ecadc;">Sign In</a></span>
            </div>
        </form>
    </div>
</div>


