@{
    ViewBag.Title = "Upload Task";
}

<div class="card mt-4 ml-auto mr-auto" style="box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.3); width:40%;">

    <div class="card-body m-auto text-center">
        <form method="post" action="@Url.Action("Index", "UploadTask")" class="d-flex flex-column align-items-center text-center">
            @{
                if (Session["InsertTask"] == null)
                {
                    <div></div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <p>@Session["InsertTask"]</p>
                    </div>
                }
            }

            <div class="form-group">
                <h3>Upload your task</h3>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="TaskTitle" placeholder="Task Title" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="ProyectName" placeholder="Proyect Name" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="TaskDescription" placeholder="Task Descripction" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label>Select Priority</label>
                <select class="form-control" name="Priority" required>
                    <option value="Level1_13">Important and Urgent</option>
                    <option value="Level13_27">Important but not Urgent</option>
                    <option value="Level28_41">Not Important but Urgent</option>
                    <option value="Level41_51">Not Important and not Urgent</option>
                </select>
            </div>


            <div class="form-group">
                <input class="form-control" id="datepicker" name="Date" data-date-format="dd/mm/yyyy" data-provide="datepicker" placeholder="Delivery Date">
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register Task</button>
            </div>

            <hr />

        </form>
    </div>
</div>

<script type="text/javascript">
    $('#datetimepicker').datetimepicker({
        pickTime: false
    });
    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy'
    });
</script>


